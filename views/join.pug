extends layouts/main.pug

block content
    .form__container.join-container
        form(action=routes.join, method="post")
            input(type="text", name="name", placeholder="Full Name", required=true, autocomplete="username")
            input(type="email", name="email", placeholder="Email address", required=true, autocomplete="username")
            input(type="password", name="password", placeholder="Password", required=true, autocomplete="current-password")
            input(type="password", name="password2", placeholder="Verify Password", required=true, autocomplete="current-password")
            input(type="submit", value="Join Now")
            include partials/socialLogin.pug