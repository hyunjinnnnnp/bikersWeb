header.header
    .header__column
        a(href=routes.home) 🏍
    .header__column
        form(action=routes.search, method="get")
            input(type="text", placeholder="Search", name="term")
    .header__column#jsUserNav
        ul
            if !loggedUser
                li
                    a(href=routes.join) Join
                li
                    a(href=routes.login) Log In
            else
                li
                    a(href=`/photos${routes.upload}`) Upload
                li
                    a(href=routes.me)
                        if loggedUser
                            span#userName=userName
                            img.avatar#userAvatar(src=userAvatar.includes('http') ? userAvatar : `../../${userAvatar}`)
                            span#userId=userId
                li
                    a(href=routes.logout) Log Out